<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg"
     viewBox="0 0 1546 846"
     width="1546" height="846"
     preserveAspectRatio="xMidYMid meet">

    <!-- Sky -->
    <defs>
        <!-- Colour -->
        <linearGradient id="sky" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" stop-color="#2b3137"/> <!-- top -->
            <stop offset="0.55" stop-color="#462050"/>
            <stop offset="0.85" stop-color="#640D6B"/> <!-- middle -->
            <stop offset="0.95" stop-color="#86136F"/>
            <stop offset="1" stop-color="#B51B75"/>    <!-- bottom -->
        </linearGradient>
    </defs>
  <rect x="0" y="0" width="1546" height="423" fill="url(#sky)"/>


    <!-- Water -->
    <defs>
        <!-- Colour -->
        <linearGradient id="water" x1="0" x2="0" y1="0" y2="1">
            <stop offset="0" stop-color="#B51B75"/> <!-- top -->
            <stop offset="0.15" stop-color="#86136F"/>
            <stop offset="0.5" stop-color="#640D6B"/> <!-- middle -->
            <stop offset="0.65" stop-color="#462050"/>
            <stop offset="1" stop-color="#2b3137"/>    <!-- bottom -->
        </linearGradient>
    </defs>
    <rect x="0" y="421" width="1546" height="423" fill="url(#water)"/>

    <!-- Water Distortion -->
    <defs>
        <filter id="waterDistort">
            <feTurbulence type="fractalNoise" baseFrequency="0.01 0.1" numOctaves="3" seed="2"/>
            <feDisplacementMap in="SourceGraphic" scale="20" />
        </filter>
    </defs>
    <rect x="0" y="421" width="1546" height="421"
        fill="url(#water)" filter="url(#waterDistort)">
    <animate attributeName="filter"
            attributeType="XML"
            from="url(#waterDistort)" to="url(#waterDistort)"
            dur="10s" repeatCount="indefinite"/>
    </rect>

    <!-- Sun -->
    <defs>
        <!-- Radial gradient for glowing sun -->
        <radialGradient id="sunGradient" cx="50%" cy="50%" r="50%">
        <stop offset="0%" stop-color="#EEAF61" stop-opacity="1"/>   <!-- bright core -->
        <stop offset="50%" stop-color="#EEAF61" stop-opacity="0.8"/>
        <stop offset="80%" stop-color="#FB9062" stop-opacity="0.5"/>
        <stop offset="100%" stop-color="#FB9062" stop-opacity="0"/>   <!-- fade out -->
        </radialGradient>

        <!-- Only show the top half -->
        <clipPath id="sun">
        <rect x="0" y="0" width="1546" height="423"/>
        </clipPath>
    </defs>

    <!-- Soft glowing sun (semicircle) -->
    <circle cx="773" cy="421" r="150" 
            fill="url(#sunGradient)" 
            clip-path="url(#sun)"/>
</svg>
